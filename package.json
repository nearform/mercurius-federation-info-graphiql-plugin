{
  "name": "mercurius-federation-info-graphiql-plugin",
  "version": "0.3.12",
  "description": "This is a graphiql plugin to display mercurius federation info.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/mercurius-federation-info-graphiql-plugin.git"
  },
  "homepage": "/",
  "keywords": [
    "mercurius",
    "federation",
    "plugin",
    "graphiql"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/mercurius-federation-info-graphiql-plugin/issues"
  },
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "jest --setupFilesAfterEnv ./src/setupTests.js",
    "watch:tests": "npm test -- --watch",
    "test:ci": "cross-env CI=true npm test",
    "eject": "react-scripts eject",
    "prepare": "husky install",
    "lint": "eslint src/**/*.{js,jsx}",
    "example": "npm run build && node ./example/index.mjs",
    "lint:fix": "eslint --fix",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-react": "^7.18.6",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@fastify/autoload": "^5.4.1",
    "@fastify/cors": "^8.1.1",
    "@graphiql/react": "^0.17.0",
    "@graphiql/toolkit": "^0.8.0",
    "@mercuriusjs/federation": "^2.0.0",
    "@mercuriusjs/gateway": "^2.0.0",
    "@mui/icons-material": "^5.10.16",
    "@mui/lab": "^5.0.0-alpha.111",
    "@mui/material": "^5.10.16",
    "@playwright/test": "^1.29.2",
    "@rollup/plugin-replace": "^5.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^14.4.3",
    "@vitejs/plugin-react": "^4.0.0",
    "babel-jest": "^29.2.2",
    "cross-env": "^7.0.3",
    "desm": "^1.3.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.3",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fastify": "^4.9.2",
    "graphiql": "^3.0.0",
    "graphql": "^16.6.0",
    "graphql-ws": "^5.11.2",
    "husky": "^8.0.1",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.0.3",
    "mercurius-federation-info": "*",
    "prettier": "^2.7.1",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-use": "^17.4.0",
    "semver": "^7.3.8",
    "use-debounce": "^9.0.2",
    "vite": "^4.0.0",
    "vite-plugin-svgr": "^3.2.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testPathIgnorePatterns": [
      "spec.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "<rootDir>/src/__mocks__/styleMock.js",
      "\\.svg$": "<rootDir>/src/__mocks__/svgMock.js"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": "eslint --cache --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "umd": "dist/umd/index.js",
  "files": [
    "dist"
  ]
}
